<%- include('partials/base') -%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/advertise.css">
  <title>Document</title>
</head>
<body>
  
  <form action="/advertise" method="post">
  <div class="form-box">
    <h1>Advertise</h1>
    <div class="mb-3">
      <label class="form-label">Company Name</label>
      <input
        type="text"
        name="companyName"
        class="form-control"
      />
      <label class="form-label">Company Email</label>
      <input
        type="email"
        class="form-control"
        name="companyEmail"
        aria-describedby="emailHelp"
      />
    </div>
    <label class="form-label">Company Website</label>
      <input
        type="text"
        class="form-control"
        name="companyLink"
      />
      <label class="form-label">Company Description</label>
      <input
        type="text"
        class="form-control"
        name="companyDesc"
      />
    <button type="submit" name="submit-btn" class="btn btn-primary sb-btn">Submit</button>
  </div>
</form>
</body>
</html>
